<launch>

    <arg name="debug"
        default="true"  />
    <arg name="load_config"
        default="true"  />
    <arg name="config_file"
        default="default" />
    <arg name="config_path"
        default="$(find obstacle_detector)/config/$(arg config_file).yaml"  />
    <arg name="node_respawn"
        default="true"  />
    <arg name="node_output"
        default="screen" doc="screen or log" />

    <group if="$(arg load_config)">
        <rosparam command="load"
            file="$(arg config_path)"  />
    </group>

    <node
        name="obstacle_detector"
        pkg="obstacle_detector"
        type="obstacle_detector"
        respawn="$(arg node_respawn)"
        output="$(arg node_output)" >
        
        <param name="visualization" value="$(arg debug)" />
    </node>

    <node pkg="tf" type="static_transform_publisher" name="tf_base2laser"           args="0.3 0 0 0 0 0 base_link laser           10"/>

</launch>
